<div class="timer-controls">
    <button id="startTimer" class="timer-btn start-btn">
        <span class="icon-container" data-icon="play"></span>
    </button>
    <button id="stopTimer" class="timer-btn stop-btn hidden">
        <span class="icon-container" data-icon="pause"></span>
    </button>
    <button id="resetTimer" class="timer-btn reset-btn">
        <span class="icon-container" data-icon="reset"></span>
    </button>
</div>