{
  "name": "bike-data-overlay",
  "version": "1.0.0",
  "description": "Cycling statistics overlay application built with Electron and TypeScript",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "npm run build && electron dist/main.js",
    "dev": "npm run build && electron dist/main.js --dev",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build"
  },
  "keywords": [
    "cycling",
    "bluetooth",
    "overlay",
    "electron",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.19.11",
    "chokidar": "^4.0.3",
    "electron": "^28.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@abandonware/noble": "^1.9.2-26",
    "axios": "^1.6.0",
    "lucide": "^0.539.0"
  }
}
